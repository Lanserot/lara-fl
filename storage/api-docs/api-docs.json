    "openapi": "3.0.0",
    "info": {
        "title": "API Documentation",
        "description": "API Documentation",
        "version": "1.0.0"
    },
    "paths": {
        "/api/users": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Get list of users",
                "description": "Добавления пользователя в бд",
                "operationId": "createUser",
                "parameters": [
                    {
                        "name": "login",
                        "in": "query",
                        "description": "Логин пользователя",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "Пароль",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "password"
                        }
                    },
                    {
                        "name": "password_repeat",
                        "in": "query",
                        "description": "Пароль повторение",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "password"
                        }
                    },
                    {
                        "name": "email",
                        "in": "query",
                        "description": "email пользователя",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "email"
                        }
                    }
                ],
                "responses": {
                    "500": {
                        "description": "Ошибка"
                    },
                    "400": {
                        "description": "Ошибка валидации"
                    },
                    "302": {
                        "description": "Пользователь уже существует"
                    },
                    "200": {
                        "description": "Успешный пароль"
                    }
                }
            }
        }
    }
